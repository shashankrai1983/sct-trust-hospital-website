# NextAuth.js Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://your-domain.com

# Admin Authentication
ADMIN_EMAIL=admin@scttrusthospital.com
# Generate with: bcrypt.hash('your-secure-password', 12)
ADMIN_PASSWORD_HASH=your-bcrypt-hash-here

# Sanity CMS Configuration
# Get these values from your Sanity project dashboard
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id-here
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2023-10-01

# Optional: Token for preview/draft content (not required for public content)
# SANITY_API_TOKEN=your-token-here

# MongoDB Atlas Configuration
# Get this connection string from your MongoDB Atlas dashboard
MONGODB_URI=your-mongodb-connection-string-here
MONGODB_DB=your-database-name

# Google reCAPTCHA Configuration
# Get these keys from https://www.google.com/recaptcha/admin
# NEVER commit real keys to repository - use placeholder values
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here